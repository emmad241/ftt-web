<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title><%= pageTitle %></title>
</head>
<body class="loggedin-body">
    <%- include('../partials/header_loggedin.ejs'); %>
    <img id="notification-bell" src="/images/notifications.png">
    <div id="notifications-container">
        <h4 style="color:white;text-decoration:underline;">Notifications</h4>
        <div id="notifications-container__stocks">
            <h4 style="color:white;">Stocks:</h4>
            <% stocks.forEach(stock => { %>
                <div class="notifications-row">
                    <p class="asset-code"><%= stock[0] %></p>
                    <p class="price-change"><%= stock[1] %> USD</p>
                </div>
            <% }); %>
        </div>
        <div id="notifications-container_crypto">
            <h4 style="color:white;">Crypto</h4>
            <% crypto.forEach(crypto => { %>
                <div class="notifications-row">
                    <p class="asset-code"><%= crypto[0] %></p>
                    <p class="price-change"><%= crypto[1] %> USD</p>
                </div>
            <% }); %>
        </div>
    </div>
    <div class="clients-table">
        <div class="headings-row">
            <p>Username</p>
            <p>Name</p>
        </div>
        <% clients.forEach(client => { %>
        <a class="clients-data" href="/clients/<%= client.username %>">
            <div class="clients-row">
                <div class="client-username"><%= client.username %></div>
                <div class="client-username"><%= client.name %></div>
            </div>
        </a>
        <% }); %>
    </div>
    <%- include('../../public/chatbot/Chatbot_js/index.ejs'); %>
    <script>
        const bell = document.getElementById('notification-bell');
        bell.addEventListener("click", () => document.querySelector("#notifications-container").style.display = document.querySelector("#notifications-container").style.display === 'none' ? 'block' : 'none');
    </script>
</body>
</html>